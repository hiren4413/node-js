<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a href="/product/viewproductpage"
                    class=" btn btn-danger mt-4">
                    view Products </a>
                <h1 align="center" class="pb-2 pt-2">Your Cart</h1>
                <div class="table-responsive">
                    <table align="center" id="zero_config" border="1" class="table table-striped table-bordered">
                        <thead>
                            <tr style="font-size: 15px;">
                                <th>No</th>
                                <th>Product Name</th>
                                <th>Discription</th>
                                <th>Price</th>
                                <th>Quntity</th>
                                <th>Images</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% cart.map((val,i)=>{ %>

                                <tr>
                                    <td>
                                        <%= ++i %>
                                    </td>
                                    <td>
                                        <%= val.name %>
                                    </td>
                                    <td>
                                        <%= val.description %>
                                    </td>
                                    <td>
                                        <%= val.price %>
                                    </td>
                                    <td>
                                        <%= val.qty %>
                                    </td>
                                    <td>
                                        <img src="../<%= val.image %>" height="80px">
                                    </td>
                                    <td>
                                        <a href="/cart/deletecart?id=<%= val.id %>" style="margin-right: 10px;"
                                            class=" btn btn-danger">
                                            Delete </a>
                                        <a href="/cart/editcart?id=<%= val.id %>" class=" btn btn-success"> Edit
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>