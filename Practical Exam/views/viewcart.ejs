<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 align="center">Your Cart</h1>
                <div class="table-responsive">
                    <table align="center" id="zero_config" border="1" class="table table-striped table-bordered">
                        <thead>
                            <tr style="font-size: 15px;">
                                <th>No</th>
                                <th>Product Name</th>
                                <th>Discription</th>
                                <th>Price</th>
                                <th>Quntity</th>
                                <th>Images</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% product.map((val,i)=>{ %>

                                <tr>
                                    <td>
                                        <%= ++i %>
                                    </td>
                                    <td>
                                        <%= val.name %>
                                    </td>
                                    <td>
                                        <%= val.description %>
                                    </td>
                                    <td>
                                        <%= val.price %>
                                    </td>
                                    <td>
                                        <%= val.qty %>
                                    </td>
                                    <td>
                                        <img src="../<%= val.image %>" height="50px">
                                    </td>
                                    <td>
                                        <a href="/product/deletecart?id=<%= val.id %>" style="margin-right: 10px;"
                                            class=" btn btn-danger">
                                            Delete </a>
                                        <a href="/product/editcart?id=<%= val.id %>" class=" btn btn-success"> Edit
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>